{
    "useTabs": false,
    "tabWidth": 4,
    "printWidth": 140,
    "singleQuote": true,
    "semi": false,
    "jsxSingleQuote": true,
    "bracketSpacing": true,
    "bracketSameLine": true,
    "arrowParens": "avoid",
    "trailingComma": "none",
    "overrides": [
